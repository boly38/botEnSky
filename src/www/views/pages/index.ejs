   <script src="/js/principes.js"></script>
   <script src="/js/faq.js"></script>
   <script src="/js/lightbox.js"></script>

   <!-- Initialize on load -->
   <script>
     // Initialize Lucide Icons
     if (window.lucide) {
       lucide.createIcons();
     }

     // Initialize content visibility
     document.addEventListener('DOMContentLoaded', function() {
       if (window.BesContent) {
         window.BesContent.toggleContent('logs');
         if (window.logDateIds && window.logDateIds.length > 0) {
           window.BesContent.toggleLogDateContent(window.logDateIds[0], window.logDateIds);
         }
       }
     });
   </script>

